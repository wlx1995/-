/* pages/shopcar/shopcar.wxss */
.nav {
  width:100%;
  padding:10rpx;
  position: fixed;
}
.nav image{
  width:34rpx;
  height:35rpx;
  margin-left:10rpx;
}
.nav text{
  color:#9e9e9e;
  font-size:16px;
  margin-left:38%;
}
/*购物车*/
.shopcar{
  width:100%;
  text-align: center;
}
.shopcar image{
  width: 80rpx;
  height:60rpx;
  margin-top:100rpx;
  vertical-align:bottom;

}
.shopcar text{
  color:#9e9e9e;
  font-size:16px;
}
.shopcar text:last-child{
  font-size:14px;
  color:red;
  border:1px solid #ccc;
  padding:20rpx;
}
/*推荐*/
view.tj{
  border-left:5px solid red;
  margin-top:120rpx;
  margin-left:20rpx;
}
view.tj text.title{
  margin-left:10rpx;
  font-size:16px;
}
/*推荐列表*/
.shop{
  width:100%;
  display:flex;
  flex-flow:row wrap;
  justify-content: space-between;
}
.shop .shop-item{
  width:48%;
  display:flex;
  flex-flow:column wrap;
  justify-content: space-around;
  border:1px solid #f5f5f5;
  margin-top:5rpx;
}
.shop .shop-item image{
  width:350rpx; 
  height:340rpx;
}
.shop .shop-item text{
  font-size:16px;
}
.shop .shop-item text:last-child{
  color:red;
}
/*结算*/
.js{
  width:100%;
  height:40rpx;
  display:flex;
  justify-content: space-around;
  position:fixed;
  bottom:0;
  left:0;
  background:#f5f5f5;
  padding:20rpx;
  font-size:16px;
  text-align: center;
}
.js radio{
  margin-top:-5rpx;
  transform:scale(0.8);
}
.js text:last-child{
  margin-top:-20rpx;
  width:25%;
  height:80rpx;
  color:#fff;
  background:#e62d40;
  line-height: 80rpx;
}