  margin:-90rpx 220rpx;
}
/*更多推荐*/
.more{
  width:100%;
  display:flex;
  flex-flow:row wrap;
  justify-content: space-around;
  margin-top:10rpx; 
}
.more .more-item{
  width:330rpx;
  flex-flow:column wrap;
  justify-content: space-between;
}
.more .more-item image{
  width:330rpx;
