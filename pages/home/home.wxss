}
.gdtj_title text{
  width: 100%;
  color: #424242;
  font-weight: 900;
  font-size:22px;
  margin-left:20rpx;
}
.gdtj_title .gdtj_bg{
  width: 120rpx;
  height:130rpx;
  background: url(http://127.0.0.1:3000/img/bg.png) no-repeat 30% 50%;
