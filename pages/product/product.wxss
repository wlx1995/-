/* pages/product/product.wxss */
/*导航栏*/
.nav{
  width:100%;
  position:fixed;
  display:flex;
  justify-content: space-around;
}
.nav text{
  margin-top:5rpx;
  width:19%;
  text-align:center;
  font-size:16px;
}
.nav text:hover{
  border-bottom:2px solid red;
}
/*商品列表*/
.shop{
  width:100%;
  display:flex;
  flex-flow:row wrap;
  justify-content: space-between;
  margin-top:55rpx;
}
.shop .shop-item{
  width:48%;
  display:flex;
  flex-flow:column wrap;
  justify-content: space-between;
  border:1px solid #f5f5f5;
  margin-top:5rpx;
}
.shop .shop-item image{
  width:350rpx; 
  height:340rpx;
}
.shop .shop-item text{
  font-size:16px;
}
.shop .shop-item text:last-child{
  color:red;
}
.hasMore{
  margin-top:20rpx;
  width:100%;
  text-align: center;
  font-size:14px;
}
